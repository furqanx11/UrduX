append variables
  -
    var explore= [
      {
        logo:'data-science.png',
        hoverlogo:'data-science.svg',
        title :'',
        text: 'Currently working on improving translation in English to Urdu language',
        bg:'bg-soft-secondary',
      },
      
    ];


mixin Explore(config)
  .col-sm-6.col-lg-3
    .card.card-hover.h-100
      .card-body.d-flex.align-items-center.px-4.px-lg-2.px-xl-4
        .d-flex.align-items-center
          .icon-box
            img.eduprix-icon(src=`${CWD}assets/img/icons/${config.logo}` alt='explore')
            img.eduprix-icon-hover(src=`${CWD}assets/img/icons/${config.hoverlogo}` alt='explore')
          .flex-grow-1.ms-3
            h4.fs-lg-1.text-light.mb-0=config.title
            a.stretched-link.explore-link(href='#!')=config.text
           
mixin ExploreEduprix
  +Section.bg-secondary
    .row.g-3
      h1.header-title-explore.display-4.header.text-start.mb-5  OUR SERVICES
      +Explore(explore[0])
      